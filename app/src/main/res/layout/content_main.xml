<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.lysiakandjuszczak.kosztorysdomu.MainActivity">

    <RelativeLayout
        android:layout_width="731dp"
        android:layout_height="1133dp"
        tools:layout_editor_absoluteX="-3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="101dp"

            android:layout_marginTop="51dp"
            android:fontFamily="serif"
            android:text="Kosztorys "
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView9"
            android:layout_marginStart="30dp"
            android:layout_marginTop="66dp"
            android:fontFamily="serif"
            android:text="Produkt"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView9"
            android:layout_marginStart="26dp"
            android:ems="10"
            android:fontFamily="serif"
            android:inputType="textPersonName"
            android:layout_alignBottom="@+id/textView10" />

        <EditText
            android:id="@+id/editTextPrize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editTextProductName"
            android:layout_below="@+id/editTextProductName"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_alignEnd="@+id/editTextProductName" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextPrize"
            android:layout_alignStart="@+id/textView10"
            android:fontFamily="serif"
            android:text="Cena"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerCurrency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/editTextPrize"
            android:layout_alignStart="@+id/editTextPrize"
            android:layout_alignEnd="@+id/editTextPrize" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinnerCurrency"
            android:layout_alignEnd="@+id/textView10"
            android:text="Waluta"
            android:textSize="18sp"
            android:layout_alignStart="@+id/textView11" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView11"
            android:layout_below="@+id/textView12"
            android:layout_marginTop="50dp"
            android:fontFamily="serif"
            android:text="Ilość"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView13"
            android:layout_alignEnd="@+id/spinnerCurrency"
            android:layout_alignStart="@+id/spinnerCurrency"
            android:ems="10"
            android:fontFamily="serif"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editTextCount"
            android:layout_alignStart="@+id/editTextCount"
            android:layout_below="@+id/editTextCount"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buttonAddProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="serif"
            android:text="Dodaj"
            android:layout_below="@+id/editTextCategory"
            android:layout_alignStart="@+id/editTextCategory"
            android:layout_marginStart="45dp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonAddProduct"
            android:layout_alignStart="@+id/textView13"
            android:fontFamily="serif"
            android:text="Kategoria"
            android:textSize="18sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>